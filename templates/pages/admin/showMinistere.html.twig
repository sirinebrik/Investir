{% extends 'base.html.twig' %}

{% block title %}Les Ministéres{% endblock %}

{% block body %}
<style>
.overlay {
  position: fixed;
  top: 100px;
  bottom: 0;
  left: 250px;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  transition: opacity 500ms;
  visibility: hidden;
  opacity: 0;
}
.overlay:target {
  visibility: visible;
  opacity: 1;
}

.popup {
  margin: 70px auto;
  padding: 20px;
  background: #fff;
  border-radius: 5px;
  width: 30%;
  position: relative;
  transition: all 5s ease-in-out;
}

.popup h2 {
  margin-top: 0;
  color: #333;
  font-family: Tahoma, Arial, sans-serif;
}
.popup .close {
  position: absolute;
  top: 20px;
  right: 30px;
  transition: all 200ms;
  font-size: 30px;
  font-weight: bold;
  text-decoration: none;
  color: blue;
}
.popup .close:hover {
  color: #06D85F;
}
.popup .content {
  max-height: 30%;
  overflow: auto;
}

@media screen and (max-width: 700px){
  .box{
    width: 70%;
  }
  .popup{
    width: 70%;
  }
}
th{
    background: #3498db; 
	
}
.card{
     box-shadow: 0 0 12px 1px rgba(0, 0, 0, 0.4);
   }
</style>

                        <div class="row mt-5">

                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-body">
                                      <p style="color:blue; font-size:16px; font-weight:bold;">Les Ministéres : <span style="background-color:red; font-size:15px;color:white;border-radius:12px;padding:0px 5px;"> {{nb}}</span></p>
                                        <br>
                                        <div class="table-responsive">
                                            <table class="table table-centered table-nowrap mb-0">
                                                <thead class="thead-light">
                                                    <tr>
                                                       
                                                        <th>Nom Complet</th>
                                                        <th>Email</th>
                                                        <th>Type</th>
                                                      
                                                        <th>Date inscription</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                 {% for user in user %}
                                                    <tr>
                                                        <td>{{user.utilisateur.username}}</td>
                                                        <td>{{user.utilisateur.email}}</td>
                                                        <td>{{user.type.titre}}</td>
                                                       
                                                        <td>{{user.utilisateur.dateInscription}}</td>
                                                       
                                                        <td> <a  href="{{ path('desactivationU', {'id': user.utilisateur.id}) }}" class="btn btn-outline-danger btn-sm edit" title="Desactiver">
                                                                    <i class="dripicons-lock"></i>
                                                                </a>
                                                        </td>
                                                        <td> <a href="{{ path('findM', {'id': user.utilisateur.id})}}" class="btn btn-outline-primary btn-sm edit" title="Show">
                                                                    <i style=" font-weight:bold;" class="dripicons-preview"></i>
                                                                </a>
                                                        </td>
                                                       
                                                    </tr>
                                                  
                                                     {% endfor %}
               

                                                </tbody>
                                            </table>
                                           
                                        </div>
                                            
                                        <!-- end table-responsive -->
                                    </div>
                                </div>
                            </div>
                         </div>


                        
 {% endblock %}



