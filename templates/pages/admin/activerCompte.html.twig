{% extends 'base.html.twig' %}

{% block title %}Activer compte!{% endblock %}

{% block body %}
<style>
.btnA:hover{
 
  border-width: 2px;
  border-style: solid;
  border-image: linear-gradient(to bottom right,#18DB32,#0360FF ) 1;
 
  font-size: 15px; 
  font-weight: 500;
}
.btnA{
    background:linear-gradient(to bottom right,#18DB32,#0360FF );
  color:  #fff;
   
   margin-top:10px;
 
}

</style>

                        <div class="row">

                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title mb-4">Activation comptes des utilisateurs</h4>
                                        <div class="table-responsive">
                                            <table class="table table-centered table-nowrap mb-0">
                                                <thead class="thead-light">
                                                    <tr>
                                                       
                                                        <th>Nom Complet</th>

                                                        <th>email</th>
                                                        <th>role</th>
                                                        <th>num_tel</th>
                                                        <th>date Inscription</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                 {% for user in user %}
                                                    <tr>
                                                        <td>{{user.username}}</td>
                                                        <td>{{user.email}}</td>
                                                        <td>{{user.role}}</td>
                                                        <td>{{user.tel}}</td>
                                                        <td>{{user.dateInscription}}</td>
                                                        <td><a class="btnA text-white" href="{{ path('activation', {'id': user.id}) }}"><i class="dripicons-checkmark"></i> Activer</a>
                                                        </td>
                                                    </tr>
                                                     {% endfor %}

                                                    

                                                   

                                                    

                                                    

                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- end table-responsive -->
                                    </div>
                                </div>
                            </div>
                         </div>


                        

                
           
       

    
    {% endblock %}