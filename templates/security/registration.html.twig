   <option>Ministére </option>
   <option>Investisseur </option>
   </select>
 </div>
  </div>
   

   

    {{ form_widget(form)}}
    
   <button class="btn btn-primary w-100 waves-effect waves-light"
                                                type="submit">S'inscrire</button>
    {{ form_end(form)}}

 <br/>
                                  
                                </div>
